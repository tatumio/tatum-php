{
    "name": "tatumio/tatum-php",
    "type": "library",
    "description": "A flexible framework to build, run, and scale blockchain apps with PHP. Perform local wallet operations (mnemonic, xpub, private key) for Bitcoin, Bitcoin Cash, BSC, Litecoin, Celo, Dogecoin, Ethereum, Harmony.ONE, KCS, Klaytn, Polygon, Tron, VeChain and XDC.",
    "keywords": [
        "web3", "sdk", "tatum", "tatum.io", "kcs", "klaytn", "polygon", "vechain", "xdc",
        "blockchain", "bitcoin", "bitcoin-cash", "litecoin", "dogecoin", "bsc", "celo", "harmony", "harmony.one",
        "stellar", "xrp", "ethereum", "eth", "tron", "nft", "hd-wallet", "crypto"
    ],
    "homepage": "https://tatum.io/",
    "license": "MIT",
    "authors": [
        {
            "name": "Tatum",
            "homepage": "https://tatum.io/",
            "role": "Team"
        },
        {   
            "name": "Mark Jivko",
            "homepage": "https://markjivko.com",
            "role": "Author"
        }
    ],
    "support": {
        "issues": "https://github.com/tatumio/tatum-php/issues",
        "source": "https://github.com/tatumio/tatum-php"
    },
    "require": {
        "php-64bit": ">=7.3",
        "ext-mbstring": "*",
        "ext-bcmath": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "ext-dom": "*"
    },
    "autoload": {
        "psr-4": { "Tatum\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "Tatum\\Test\\" : "test/" }
    }
}
